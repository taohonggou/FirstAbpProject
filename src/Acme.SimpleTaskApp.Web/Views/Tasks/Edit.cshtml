@model Acme.SimpleTaskApp.Web.Models.Tasks.EditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form id="TaskEditFrom">
    <div class="hidden">
        <input type="text" name="Id" value="@Model.Task.Id" />
    </div>
    <div class="form-group">
        <label for="Title">@L("Title")</label>
        <input type="text" name="Title" class="form-control" placeholder="@L("Title")" maxlength="@Acme.SimpleTaskApp.Tasks.Task.MaxTitleLength" value="@Model.Task.Title" />
    </div>
    <div class="form-group">
        <label for="">@L("Description")</label>
        <input type="text" name="Description" class="form-control" placeholder="@L("Description")" maxlength="@Acme.SimpleTaskApp.Tasks.Task.MaxDescriptionLength" value="@Model.Task.Description" />
    </div>
    <div class="form-group">
        @Html.Label(L("AssignedPerson"))
        @Html.DropDownList(
           "AssignedPersonId",
           Model.People,
           new
           {
               @class = "form-control",
               id = "AssignedPersonCombobox"
           })
    </div>
    <div class="form-group">
        @*@Html.Label("TaskState")
            @Html.DropDownList({
                o => Model.Task.State,


            })*@
    </div>
    <button type="submit" class="btn btn-default">@L("Save")</button>
</form>

